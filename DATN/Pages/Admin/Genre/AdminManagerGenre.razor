@layout SupportLayout
@page "/manager-genre"
@inject NavigationManager UriHelper

<div class="card mb-4">
    <div class="card-header mb-3">
        Quản lý thể loại
    </div>
    <div class="card-body">
          @if (isLoading)
        {
            <DATN.Shared.Components.LoadingComponent />
        }
        else
        {
        <div class="table-responsive">
            <div class="row col-sm-12 mb-4 mt-2">
                <div class="col-sm-3">
                    <a href="/add-genre" class="btn btn-primary btn-sm">Thêm thể loại</a>
                </div>
            </div>
            <table class="table table-sm table-bordered table-hover">
                <thead class="table-warning">
                    <tr>
                        <th>STT</th>
                        <th>Tên thể loại</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (genres == null || genres.Count() == 0)
                    {
                        <tr class="cus-text-align-center">
                            <td colspan="4">Không có dữ liệu</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in genres)
                        {
                            <tr>
                                <td>@ROW_INDEX</td>
                                <td>@item.genre_name</td>
                                <td>@item.status</td>
                                <td>
                                    <a href="" class="btn btn-primary"
                               @onclick="() => btn_pass_data(item)"> Cập nhật</a>
                                </td>
                            </tr>
                            ROW_INDEX++;
                            @if (ROW_INDEX > genres.Count())
                            { ROW_INDEX = 1; }
                        }
                    }
                </tbody>
            </table>
        </div>
        }
    </div>
</div>
<RadzenNotification />

